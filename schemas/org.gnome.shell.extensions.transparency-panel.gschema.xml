<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <schema id="org.gnome.shell.extensions.transparency-panel" path="/org/gnome/shell/extensions/transparency-panel/">
    
    <key name="panel-opacity" type="i">
      <default>90</default>
      <summary>Opacity of the top bar (0-100)</summary>
      <description>Controls the RGBA alpha for the top bar background.</description>
    </key>

    <key name="use-custom-style" type="b">
      <default>true</default>
      <summary>Enable dynamic overrides</summary>
      <description>If true, applies styles from GSettings.</description>
    </key>

